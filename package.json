{
  "name": "badge-collection",
  "type": "module",
  "version": "1.1.2",
  "private": true,
  "description": "这是一个徽章收集仓库：收集了一些 Github 上热门项目使用过的徽章，以及一些徽章在线制作工具链接。",
  "author": {
    "name": "xiaohuohumax",
    "url": "https://github.com/xiaohuohumax"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xiaohuohumax/badge-collection.git"
  },
  "keywords": [
    "badge",
    "github",
    "readme",
    "markdown",
    "github-profile",
    "readme-profile"
  ],
  "scripts": {
    "dev": "vite dev",
    "spider": "vite-node --config scripts/vite.config.ts scripts/spider/index.ts",
    "build": "vite-node --config scripts/vite.config.ts scripts/build/index.ts",
    "build:schema": "rimraf .vscode/schema && npm run build:badge-schema && npm run build:spider-schema",
    "build:badge-schema": "npx ts-json-schema-generator --path scripts/build/schema.ts --type Badge -o .vscode/schema/badge.schema.json",
    "build:spider-schema": "npx ts-json-schema-generator --path scripts/spider/schema.ts --type SpiderConfig -o .vscode/schema/spider.schema.json",
    "commit": "git add . && cz",
    "postinstall": "simple-git-hooks",
    "changeset": "changeset",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "art-template": "^4.13.4",
    "chokidar": "^4.0.3",
    "fs-extra": "^11.3.0",
    "github-markdown-css": "^5.8.1",
    "klaw-sync": "^6.0.0",
    "minimatch": "^10.0.1",
    "octokit": "^4.1.2",
    "rehype-parse": "^9.0.1",
    "rehype-raw": "^7.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.1",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.10.1",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.28.1",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/fs-extra": "^11.0.4",
    "@types/klaw-sync": "^6.0.5",
    "@types/node": "^22.13.10",
    "commitizen": "^4.3.1",
    "cz-git": "^1.11.1",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "ts-json-schema-generator": "^2.3.0",
    "vite": "^6.2.2",
    "vite-node": "^3.0.8"
  },
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit $1",
    "pre-commit": "npm run lint:fix && git add ."
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}