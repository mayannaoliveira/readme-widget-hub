{
  "cSpell.ignorePaths": [
    ".git",
    ".vscode",
    ".github",
    "node_modules",
    "dist",
    "/*.md",
    "locales/*.md",
    "*.json",
    ".env*",
    "eslint.config.mjs",
    "commitlint.config.cjs"
  ],
  "cSpell.words": [
    "Jsons",
    "klaw",
    "lazyload",
    "lazysizes",
    "nodir",
    "querys",
    "tocs"
  ],
  "json.schemas": [
    {
      "fileMatch": [
        "/badges/**/*.json",
        "!/badges/**/collection.json"
      ],
      "url": "/.vscode/schema/badge.schema.json"
    },
    {
      "fileMatch": [
        "/badges/**/collection.json"
      ],
      "url": "/.vscode/schema/collection.schema.json"
    },
    {
      "fileMatch": [
        "/scripts/spider/config.json"
      ],
      "url": "/.vscode/schema/spider.schema.json"
    },
    {
      "fileMatch": [
        "/readme.json"
      ],
      "url": "/.vscode/schema/readme.schema.json"
    }
  ]
}