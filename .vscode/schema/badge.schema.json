{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/Badge",
  "definitions": {
    "Badge": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "是否启用",
          "default": true
        },
        "index": {
          "type": "number",
          "description": "显示顺序，数字越小越靠前",
          "default": 9999
        },
        "title": {
          "type": "string",
          "description": "名称"
        },
        "description": {
          "type": "string",
          "description": "描述"
        },
        "alert": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "Note",
                "Tip",
                "Important",
                "Warning",
                "Caution"
              ],
              "description": "类型",
              "default": "Tip"
            },
            "messages": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              ],
              "description": "提示内容"
            }
          },
          "required": [
            "messages"
          ],
          "additionalProperties": false,
          "description": "提示"
        },
        "tags": {
          "type": "object",
          "properties": {
            "repoUrl": {
              "type": "string",
              "description": "项目地址"
            },
            "onlineToolUrl": {
              "type": "string",
              "description": "在线工具地址"
            },
            "officialDocsUrl": {
              "type": "string",
              "description": "官方文档地址"
            },
            "needLogin": {
              "type": "boolean",
              "description": "是否需要登录"
            }
          },
          "additionalProperties": false,
          "description": "标签"
        },
        "rule": {
          "type": "object",
          "properties": {
            "params": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/RuleItem"
              },
              "description": "路径参数"
            },
            "query": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/RuleItem"
              },
              "description": "查询参数"
            },
            "URITemplates": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              ],
              "description": "整体URL模板 URI Template"
            }
          },
          "required": [
            "URITemplates"
          ],
          "additionalProperties": false,
          "description": "规则"
        },
        "useExamples": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Example"
          },
          "description": "示例"
        }
      },
      "required": [
        "title",
        "description",
        "rule",
        "useExamples"
      ],
      "additionalProperties": false,
      "description": "徽章数据结构"
    },
    "RuleItem": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "名称"
        },
        "type": {
          "type": "string",
          "description": "类型"
        },
        "default": {
          "type": "string",
          "description": "默认值"
        },
        "description": {
          "type": "string",
          "description": "说明"
        },
        "extDescription": {
          "type": "string",
          "description": "补充说明"
        }
      },
      "required": [
        "name",
        "type",
        "description"
      ],
      "additionalProperties": false,
      "description": "规则参数"
    },
    "Example": {
      "type": "object",
      "properties": {
        "explain": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "annotate": {
              "type": "string",
              "description": "注释"
            },
            "alt": {
              "type": "string",
              "description": "描述"
            },
            "src": {
              "type": "string",
              "description": "链接"
            }
          },
          "required": [
            "src"
          ],
          "description": "说明"
        },
        "images": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/MarkdownImage"
          },
          "description": "图片"
        }
      },
      "required": [
        "explain",
        "images"
      ],
      "additionalProperties": false,
      "description": "示例"
    },
    "MarkdownImage": {
      "type": "object",
      "properties": {
        "alt": {
          "type": "string",
          "description": "描述"
        },
        "src": {
          "type": "string",
          "description": "链接"
        }
      },
      "required": [
        "src"
      ],
      "additionalProperties": false,
      "description": "Markdown 图片"
    }
  }
}
