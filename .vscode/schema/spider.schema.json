{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/SpiderConfig",
  "definitions": {
    "SpiderConfig": {
      "type": "object",
      "properties": {
        "outDir": {
          "type": "string",
          "description": "输出目录"
        },
        "languages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "爬取语言类型"
        },
        "languageReposCount": {
          "type": "number",
          "description": "每种语言类型下需要爬取的仓库数量"
        },
        "repos": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "爬取仓库列表"
        },
        "imagePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "图片链接匹配规则，参考：https://www.npmjs.com/package/minimatch"
        }
      },
      "required": [
        "outDir",
        "languages",
        "languageReposCount",
        "repos",
        "imagePatterns"
      ],
      "additionalProperties": false,
      "description": "爬取配置"
    }
  }
}
