{
  "title": "Visitor Badge",
  "description": "创建一个可用于任何网站或 GitHub 个人资料的访客徽章。",
  "description:en-US": "Create a visitor badge that you can use on any website or GitHub profile.",
  "tag": {
    "repo": "https://github.com/estruyf/web-visitorbadge-nextjs",
    "onlineTool": "https://visitorbadge.io/"
  },
  "linkRules": {
    "params": [
      {
        "name": "type",
        "type": "string",
        "description": "徽章类型",
        "description:en-US": "Badge type",
        "moreDescription": "可选值：`visitors`（总数）、`daily`（单日）、`combined`（前两个组合）。",
        "moreDescription:en-US": "Supported: `visitors` (total), `daily` (single day), `combined` (two combined)."
      }
    ],
    "querys": [
      {
        "name": "path",
        "type": "string",
        "required": true,
        "description": "统计路径",
        "description:en-US": "Statistics path",
        "moreDescription": "URL 或 用户名/仓库，用于唯一统计的链接或字符串。",
        "moreDescription:en-US": "URL or username/repository to uniquely identify the link or string for statistics."
      },
      {
        "name": "label",
        "type": "string",
        "description": "徽章标签",
        "description:en-US": "Badge label"
      },
      {
        "name": "labelColor",
        "type": "string",
        "default": "#555555",
        "description": "徽章标签背景颜色",
        "description:en-US": "Badge label background color",
        "moreDescription": "支持类型：`HEX`，例如：`#FF0000`。",
        "moreDescription:en-US": "Supported: `HEX`, for example: `#FF0000`."
      },
      {
        "name": "countColor",
        "type": "string",
        "default": "#263759",
        "description": "徽章数字背景颜色",
        "description:en-US": "Badge count background color",
        "moreDescription": "支持类型：`HEX`，例如：`#FF0000`。",
        "moreDescription:en-US": "Supported: `HEX`, for example: `#FF0000`."
      },
      {
        "name": "style",
        "type": "string",
        "default": "default",
        "description": "徽章样式",
        "description:en-US": "Badge style",
        "moreDescription": "可选值：`default`、`flat`、`flat-square`、`plastic`。",
        "moreDescription:en-US": "Supported: `default`, `flat`, `flat-square`, `plastic`."
      },
      {
        "name": "labelStyle",
        "type": "string",
        "default": "upper",
        "description": "徽章标签大小写",
        "description:en-US": "Badge label case",
        "moreDescription": "可选值：`upper`（大写） `lower`（小写）。",
        "moreDescription:en-US": "Supported: `upper` (uppercase) `lower` (lowercase)."
      }
    ],
    "uriTemplate": "https://api.visitorbadge.io/api/{type}{?path,label,labelColor,countColor,style,labelStyle}"
  },
  "examples": {
    "annotate": "xiaohuohumax/badge-collection",
    "alt": "访问数",
    "alt:en-US": "Visitors",
    "href": "https://api.visitorbadge.io/api/combined?path=https%3A%2F%2Fgithub.com%2Fxiaohuohumax%2Fbadge-collection&label=VISITORS&countColor=%23f3722c",
    "images": [
      {
        "alt": "访问数",
        "alt:en-US": "Visitors",
        "href": "https://api.visitorbadge.io/api/combined?path=https%3A%2F%2Fgithub.com%2Fxiaohuohumax%2Fbadge-collection&label=VISITORS&countColor=%23f3722c"
      }
    ]
  }
}