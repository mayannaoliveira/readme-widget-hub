{
  "title": "HITS | 访问统计",
  "description": "一个简单的方法来查看有多少人访问了您的网站或 GitHub 仓库。",
  "tags": {
    "repoUrl": "https://github.com/gjbae1212/hit-counter",
    "onlineToolUrl": "https://hits.seeyoufarm.com/#badge"
  },
  "rules": {
    "querys": [
      {
        "name": "url",
        "type": "string",
        "description": "需要统计的网站或 GitHub 仓库的 URL"
      },
      {
        "name": "edge_flat",
        "type": "boolean",
        "description": "徽章整体风格",
        "extDescription": "可选值：true（Flat） false（Round）"
      },
      {
        "name": "title",
        "default": "hits",
        "type": "string",
        "description": "左侧标签内容"
      },
      {
        "name": "title_bg",
        "type": "string",
        "default": "#555555",
        "description": "左侧标签背景颜色",
        "extDescription": "支持十六进制颜色代码，例如：#FF0000"
      },
      {
        "name": "count_bg",
        "type": "string",
        "default": "#79C83D",
        "description": "右侧信息背景颜色",
        "extDescription": "支持十六进制颜色代码，例如：#FF0000"
      },
      {
        "name": "icon_color",
        "type": "string",
        "description": "图标颜色",
        "extDescription": "支持十六进制颜色代码，例如：#FF0000"
      }
    ],
    "srcTemplate": "https://hits.seeyoufarm.com/api/count/incr/badge.svg{?url,edge_flat,title,title_bg,count_bg,icon_color}"
  },
  "examples": [
    {
      "explain": {
        "annotate": "xiaohuohumax/badge-collection",
        "alt": "Hit Counter",
        "src": "https://hits.seeyoufarm.com/api/count/incr/badge.svg?url=https://github.com/xiaohuohumax/badge-collection"
      },
      "images": [
        {
          "alt": "Hit Counter",
          "src": "https://hits.seeyoufarm.com/api/count/incr/badge.svg?url=https://github.com/xiaohuohumax/badge-collection"
        }
      ]
    }
  ]
}