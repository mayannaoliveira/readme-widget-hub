{
  "title": "GTCE : GitHub Twitter Card Embed | Twitter 推文卡片",
  "description": "展示你 Twitter 的推文、创建时间、点赞、认证徽章等信息。",
  "tags": {
    "repoUrl": "https://github.com/VishwaGauravIn/github-twitter-card-embed",
    "onlineToolUrl": "https://gtce.itsvg.in/",
    "officialDocsUrl": "https://github.com/VishwaGauravIn/github-twitter-card-embed?tab=readme-ov-file#-parameters"
  },
  "rules": {
    "querys": [
      {
        "name": "username",
        "type": "string",
        "description": "Twitter 用户名"
      },
      {
        "name": "theme",
        "type": "string",
        "default": "dracula",
        "description": "主题",
        "extDescription": "可选值：`default` `default_repocard` `transparent` `dark` `tokyonight` 更多主题参考：[Themes](https://github.com/VishwaGauravIn/github-twitter-card-embed?tab=readme-ov-file#-themes)"
      },
      {
        "name": "icon",
        "type": "string",
        "default": "default",
        "description": "图标",
        "extDescription": "可选值：`default` `thunder` `sun` `beaker` `bookmark` `bug` `cake` `badge` `code` `smile` `fire` `hashtag` `heart` `lock` `moon` `radio` `sparkles` `star` `trophy` `user`"
      },
      {
        "name": "time",
        "type": "boolean",
        "default": "true",
        "description": "是否显示时间",
        "extDescription": "可选值：`true` `false`"
      },
      {
        "name": "response",
        "type": "boolean",
        "default": "true",
        "description": "是否显示点赞、转发和评论",
        "extDescription": "可选值：`true` `false`"
      },
      {
        "name": "border",
        "type": "boolean",
        "default": "true",
        "description": "是否显示边框",
        "extDescription": "可选值：`true` `false`"
      }
    ],
    "srcTemplate": "https://gtce.itsvg.in/api{?username,theme,icon,time,response,border}"
  },
  "useExamples": [
    {
      "explain": {
        "annotate": "VishwaGauravIn",
        "alt": "Twitter Card",
        "src": "https://gtce.itsvg.in/api?username=VishwaGauravIn&theme=jolly&response=false&border=false"
      },
      "images": [
        {
          "alt": "Twitter Card",
          "src": "https://gtce.itsvg.in/api?username=VishwaGauravIn&theme=jolly&response=false&border=false"
        }
      ]
    }
  ]
}