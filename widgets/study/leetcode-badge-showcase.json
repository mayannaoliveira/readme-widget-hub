{
  "title": "LeetCode Badge Showcase",
  "description": "在你的 Github README 页面展示你的 LeetCode 徽章。",
  "description:en-US": "Showcase your LeetCode badges on your Github README page.",
  "tag": {
    "repo": "https://github.com/KevzPeter/Leetcode-Badge-Showcase",
    "onlineTool": "https://leetcode-badge-showcase.vercel.app/",
    "officialDoc": "https://github.com/KevzPeter/Leetcode-Badge-Showcase?tab=readme-ov-file#-add-to-your-readme-page"
  },
  "linkRules": {
    "querys": [
      {
        "name": "username",
        "type": "string",
        "description": "LeetCode 用户名",
        "description:en-US": "LeetCode username"
      },
      {
        "name": "animated",
        "type": "boolean",
        "description": "动画徽章",
        "description:en-US": "Animated Badges",
        "moreDescription": "可选值：`true` `false`。",
        "moreDescription:en-US": "Supported: `true` `false`."
      },
      {
        "name": "theme",
        "type": "string",
        "default": "dark",
        "description": "主题",
        "description:en-US": "Theme",
        "moreDescription": "可选值：`dark` `light` `github-dark` `monokai` `tokyonight` `nightowl` 更多主题请参考 [Themes](https://github.com/KevzPeter/Leetcode-Badge-Showcase?tab=readme-ov-file#-themes)。",
        "moreDescription:en-US": "Supported: `dark` `light` `github-dark` `monokai` `tokyonight` `nightowl` More themes please refer to [Themes](https://github.com/KevzPeter/Leetcode-Badge-Showcase?tab=readme-ov-file#-themes)."
      },
      {
        "name": "filter",
        "type": "string",
        "description": "显示特定的徽章集",
        "description:en-US": "show a specific set of badges",
        "moreDescription": "可选值：`comp` `study` `annual` `submission` `daily`。",
        "moreDescription:en-US": "Supported: `comp` `study` `annual` `submission` `daily`."
      },
      {
        "name": "border",
        "type": "string",
        "description": "是否显示边框",
        "description:en-US": "Show border",
        "moreDescription": "可选值：`border` `no-border`。",
        "moreDescription:en-US": "Supported: `border` `no-border`."
      }
    ],
    "uriTemplate": "https://leetcode-badge-showcase.vercel.app/api{?username,animated,theme,filter,border}"
  },
  "examples": {
    "annotate": "kevzpeter",
    "alt": "Leetcode 徽章",
    "alt:en-US": "Leetcode Badges",
    "href": "https://leetcode-badge-showcase.vercel.app/api?username=kevzpeter&filter=annual&border=no-border&theme=github-dark",
    "images": [
      {
        "alt": "Leetcode 徽章",
        "alt:en-US": "Leetcode Badges",
        "href": "https://leetcode-badge-showcase.vercel.app/api?username=kevzpeter&filter=annual&border=no-border&theme=github-dark"
      }
    ]
  }
}