        "description:en-US": "Banner URL"
      },
      {
        "name": "large_image",
        "type": "string",
        "description": "大图链接",
        "description:en-US": "Large image URL"
      },
      {
        "name": "small_image",
        "type": "string",
        "description": "小图链接",
        "description:en-US": "Small image URL"
      },
      {
        "name": "hex",
        "type": "string",
        "description": "替代横幅颜色",
        "description:en-US": "Alternative banner color",
        "moreDescription": "格式：`HEX`，例如：`FF0000`。",
        "moreDescription:en-US": "Format: `HEX`, e.g. `FF0000`."
      }
    ],
    "uriTemplate": "https://discord-cards.onrender.com/api/{type}/{discordId}"
