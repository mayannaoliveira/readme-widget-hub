  "linkRules": {
    "params": [
      {
        "name": "type",
        "type": "string",
        "description": "卡片类型",
        "description:en-US": "Card type",
        "moreDescription": "可选值：`card` `compact`。",
        "moreDescription:en-US": "Supported: `card` `compact`."
      },
      {
        "name": "discordId",
        "type": "string",
        "description": "Discord 用户 ID",
        "description:en-US": "Discord user ID"
      }
